# Logging settings
LOG_CONFIG = {
    'dir': os.path.join(BASE_DIR, 'logs'),
    'filename': 'application.log',
    'level': 'DEBUG' if DEBUG else 'INFO',
    'format': '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
}

# GUI settings
GUI = {
    'window_width': 1024,
    'window_height': 768,
